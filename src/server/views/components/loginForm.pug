doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous")
  
  body

    form.form-signin(method='POST' action='/login')
      h1.h3.mb-3.font-weight-normal Please sign in
      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(name='username' type='text' placeholder='Your login' required='' autofocus='', value=login)
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(name='password' type='password' placeholder='Your password' required='')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
      br
      if errorMessage
        .alert.alert-danger #{errorMessage}